  const langButtons = document.querySelectorAll('.lang-btn');
  const servicesTableBody = document.getElementById('services-table-body');
  const titleEl = document.getElementById('title');
  const headerService = document.getElementById('header-service');
  const headerDesc = document.getElementById('header-desc');
  const headerPrice = document.getElementById('header-price');

  function render(lang) {
    const content = data[lang];
    titleEl.textContent = content.title;
    headerService.textContent = content.headers[0];
    headerDesc.textContent = content.headers[1];
    headerPrice.textContent = content.headers[2];

    servicesTableBody.innerHTML = '';
    content.services.forEach(service => {
      const tr = document.createElement('tr');
      service.forEach(text => {
        const td = document.createElement('td');
        td.textContent = text;
        tr.appendChild(td);
      });
      servicesTableBody.appendChild(tr);
    });
  }

  langButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      langButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      render(btn.dataset.lang);
    });
  });

  // Инициализация сайта с русским по умолчанию
  render('ru');
</script>

